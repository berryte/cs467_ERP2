<link rel="stylesheet" type="text/css" href="/css/userAccount.css">
<h1 class="title">User Account Settings</h1>

<h2 class="sigSection">Free Draw Your Signature</h2>
<div id="sigPadDiv">
	<canvas id="signaturePad" width="500" height="100" style="border:1px solid #000000;">
	</canvas> 
	<p>
		<button id="clearFunc" type="button">Clear</button> 
		<button id="submitSig" class="submitButtons" type="button">Submit</button> 
	</p>
</div>
<h2 class="sigSection">Upload a Signature from a File</h2>
<div id="uploadSigDiv">
	<img id="sigPic" width=500 height=100/>
	<p>
		<input id=uploadSig type="file" accept="image/*" onchange="loadFile(event)">
		<button id="submitUploadedSig" class="submitButtons" type="button">Submit</button> 
	</p>
<div>
<script type="text/javascript" src="/js/userAccount.js"></script>
